<h1>Hello Problem#edit</h1>

<div class="center">
<%= form_tag(problem_path, :method => "put") do %>
    <%=label_tag(:name, "Problem name:")%>
    <%= text_field_tag(:name, @cur_problem.name)%>
    <br />
    <%= label_tag(:description, "Problem description: ")%>
    <%= text_area_tag(:description, @cur_problem.description)%>
    <%= submit_tag("Update", :class => "btn btn-primary")%>
<% end %>
</div>

